{
	"extends": [
		"airbnb"
	],
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"plugins": [
		"react",
		"babel",
		"import"
	],
	"rules": {
		"import/extensions": 0,
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-filename-extension": 0,
		"react/jsx-one-expression-per-line": 0
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
